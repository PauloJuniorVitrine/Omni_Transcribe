# Core execution
APP_ENV=development
ASR_ENGINE=openai
OPENAI_API_KEY=sk-xxxxx
OPENAI_BASE_URL=https://api.openai.com/v1
POST_EDIT_MODEL=gpt-4.1
OPENAI_WHISPER_RESPONSE_FORMAT=verbose_json
OPENAI_WHISPER_CHUNKING_STRATEGY=
LOCAL_WHISPER_MODEL_SIZE=medium   # use large-v3 para maxima precisao open-source
CHATGPT_MODEL=gpt-4.1

# Paths
BASE_INPUT_DIR=inbox
BASE_OUTPUT_DIR=output
BASE_PROCESSING_DIR=processing
BASE_BACKUP_DIR=backup
BASE_REJECTED_DIR=rejected
CSV_LOG_PATH=output/log.csv

# Limites e chunking (ajustados para suportar uploads longos via GUI)
MAX_AUDIO_SIZE_MB=12288
MAX_REQUEST_BODY_MB=2048
OPENAI_CHUNK_TRIGGER_MB=25
OPENAI_CHUNK_DURATION_SEC=900
ACCURACY_THRESHOLD=0.99
SESSION_TTL_MINUTES=720
ALLOWED_DOWNLOAD_EXTENSIONS=txt,srt,vtt,json,zip

CREDENTIALS_SECRET_KEY=change-me-32chars-secret-key!!
DOWNLOAD_TOKEN_SECRET=
TEST_MODE=1               # Use apenas em dev/test; remova em produção
SKIP_RUNTIME_CREDENTIALS_VERIFY=1  # Use apenas em dev/test; remova em produção

# CORS (ajuste em produção para domínios específicos)
CORS_ALLOWED_ORIGINS=http://127.0.0.1:8000
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=content-type,authorization,x-csrf-token

# Persistence & integrations
DATABASE_URL=sqlite:///transcribeflow.db
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_CREDENTIALS_PATH=config/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_WORKSHEET=Jobs
S3_ENABLED=false
S3_BUCKET=transcribeflow
S3_PREFIX=transcribeflow/backups
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=
GOTRANSCRIPT_ENABLED=false
GOTRANSCRIPT_BASE_URL=https://api.gotranscript.com
GOTRANSCRIPT_API_KEY=
GOTRANSCRIPT_TIMEOUT_SEC=30

# Telemetry / Alerts
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
METRICS_WEBHOOK_URL=

# Watcher
WATCHER_POLL_INTERVAL=5
